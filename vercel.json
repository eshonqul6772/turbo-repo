{
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": { "branch": "front" }
    },
    {
      "src": "apps/admin/package.json",
      "use": "@vercel/next",
      "config": { "branch": "admin" }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/apps/web/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/.next/serverless/pages/$1",
      "conditions": { "branch": "front" }
    },
    {
      "src": "/(.*)",
      "dest": "/apps/admin/.next/serverless/pages/$1",
      "conditions": { "branch": "admin" }
    }
  ]
}